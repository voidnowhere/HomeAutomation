<Window x:Class="HomeAutomation.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeAutomation"
        mc:Ignorable="d"
        Title="Home Automation" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Auth" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Label Content="Login" Grid.Column="0" Grid.Row="1"/>
        <TextBox Name="textBoxLogin" Grid.Column="1" Grid.Row="1" Margin="5"/>
        <Label Content="Password" Grid.Column="0" Grid.Row="2"/>
        <PasswordBox Name="passwordBox" Grid.Column="1" Grid.Row="2" Margin="5"/>
        <Button Name="buttonAuth" Grid.ColumnSpan="2" Grid.Row="3" Margin="115,20,115,5" Click="buttonAuth_Click">Auth</Button>
    </Grid>
</Window>
